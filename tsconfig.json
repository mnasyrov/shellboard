{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/js",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
